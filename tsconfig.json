{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "sourceMap": false,
      "inlineSources": false,
      "declaration": false,
      "forceConsistentCasingInFileNames": true,
      "pretty": false,
      "noImplicitThis": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "preserveConstEnums": true,
      "noImplicitAny": false,
      "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "homebridge", "**/*.d.ts", "**/*.js"]

}
